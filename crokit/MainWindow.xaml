<Window
    x:Class="crokit.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:crokit"
    mc:Ignorable="d"
    MouseMove="Border_MouseMove"
    xmlns:image="clr-namespace:crokit.image"
    Loaded="Window_Loaded"
    d:Background="#262626"
    Title="crokit"
    WindowStyle="None"
    AllowsTransparency="True"
    Height="450"
    Width="800">
    <Grid>
        
        <Border
            BorderThickness="1"
            BorderBrush="RoyalBlue">
            <Grid
                >
                <Grid.RowDefinitions>
                    <RowDefinition
                        Height="30" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid
                    Grid.Row="0">
                    <StackPanel
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Width="64">
                        <ToggleButton
                            x:Name="TopMost_Button"
                            Background="{x:Null}"
                            BorderBrush="{x:Null}"
                            HorizontalAlignment="Left"
                            Width="32"
                            Foreground="{x:Null}"
                            IsChecked="False"
                            IsTabStop="False"
                            Focusable="False">
                            <ToggleButton.Style>
                                <Style
                                    TargetType="{x:Type ToggleButton}">
                                    <!-- 초기 상태는 Off (IsChecked=false) -->
                                    <Setter
                                        Property="IsChecked"
                                        Value="False" />
                                    <Setter
                                        Property="Content">
                                        <Setter.Value>
                                            <Image
                                                Source="pack://application:,,,/Resources/keep_off.png"
                                                Height="20"
                                                Width="20"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center" />
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger
                                            Property="IsChecked"
                                            Value="True">
                                            <Setter
                                                Property="Background"
                                                Value="{x:Null}" />
                                            <Setter
                                                Property="Content">
                                                <Setter.Value>
                                                    <Image
                                                        Source="pack://application:,,,/Resources/keep.png"
                                                        Height="20"
                                                        Width="20"
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center" />
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </ToggleButton.Style>
                            <ToggleButton.Template>
                                <ControlTemplate
                                    TargetType="{x:Type ToggleButton}">
                                    <ContentPresenter
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center" />
                                </ControlTemplate>
                            </ToggleButton.Template>
                        </ToggleButton>
                        <Button
                            x:Name="Close_Button"
                            Background="{x:Null}"
                            BorderBrush="{x:Null}"
                            HorizontalAlignment="Left"
                            Width="32"
                            IsTabStop="False">
                            <Image
                                Source="pack://application:,,,/Resources/close.png"
                                Height="20"
                                Width="20"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center" />
                        </Button>
                    </StackPanel>

                </Grid>
                <Grid
                    Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition
                            Width="200" />
                        <ColumnDefinition
                            Width="Auto" />
                        <ColumnDefinition />

                    </Grid.ColumnDefinitions>
                    <Border
                        Margin="2,2,2,2">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition
                                    Height="13*" />
                                <RowDefinition
                                    Height="201*" />
                            </Grid.RowDefinitions>
                            <StackPanel
                                Orientation="Horizontal">
                                <TextBlock
                                    Foreground="White"
                                    Margin="5,0,0,0"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"><Run
                                        Text="Croquis List" /></TextBlock>
                                <Button
                                    Background="{x:Null}"
                                    BorderBrush="{x:Null}"
                                    IsTabStop="False"
                                    Width="25"
                                    Height="25"
                                    HorizontalAlignment="Right"
                                    Command="{Binding LoadImagesCommand}">
                                    <Image
                                        Source="pack://application:,,,/Resources/add.png"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Width="20"
                                        Height="20" />
                                </Button>
                            </StackPanel>
                            <ScrollViewer
                                Grid.Row="1"
                                PreviewMouseWheel="ScrollViewer_PreviewMouseWheel"
                                Margin="0,2,0,0">
                                <ItemsControl
                                    x:Name="ImageItemsControl"
                                    MouseLeftButtonDown="ImageItemsControl_MouseLeftButtonDown"
                                    MouseMove="ImageItemsControl_MouseMove"
                                    MouseLeftButtonUp="ImageItemsControl_MouseLeftButtonUp"
                                    ItemsSource="{Binding UserImages}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <!-- 이미지 크기는 필요에 따라 조정합니다.
                 아래 예제에서는 고정 크기 50x50으로 설정했지만,
                 Auto 또는 Binding을 이용해 동적으로 조정할 수도 있습니다. -->
                                            <Border>
                                                <Image
                                                    Source="{Binding}"
                                                    Width="75"
                                                    Height="75"
                                                    Stretch="UniformToFill"
                                                    MouseLeftButtonDown="Image_MouseLeftButtonDown"
                                                    Margin="2">
                                                    <Image.Style>
                                                        <Style
                                                            TargetType="Image">
                                                            <Setter
                                                                Property="Opacity"
                                                                Value="1" />
                                                            <Style.Triggers>
                                                                <Trigger
                                                                    Property="IsMouseOver"
                                                                    Value="True">
                                                                    <Setter
                                                                        Property="Opacity"
                                                                        Value="0.7" />
                                                                </Trigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Image.Style>
                                                </Image>
                                            </Border>

                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>

                        </Grid>

                    </Border>
                    <GridSplitter
                        Grid.Column="1"
                        Width="3"
                        HorizontalAlignment="Center" />
                    <Image
                        x:Name="SelectedImage"
                        Grid.Column="2"
                        Source="{Binding NextImage ,UpdateSourceTrigger=PropertyChanged}" />
                </Grid>
            </Grid>
        </Border>
        <!-- 마우스 감지용 Border (보이지 않음) -->
        <!-- 마우스 감지용 Border: 위쪽 5픽셀 -->
        <Border
            Background="Transparent"
            Height="5"
            VerticalAlignment="Top"
            MouseMove="Border_MouseMove"
            Cursor="SizeNS"
            Panel.ZIndex="10" />

        <!-- 아래쪽 -->
        <Border
            Background="Transparent"
            Height="5"
            VerticalAlignment="Bottom"
            MouseMove="Border_MouseMove"
            Cursor="SizeNS"
            Panel.ZIndex="10" />

        <!-- 왼쪽 -->
        <Border
            Background="Transparent"
            Width="5"
            HorizontalAlignment="Left"
            MouseMove="Border_MouseMove"
            Cursor="SizeWE"
            Panel.ZIndex="10" />

        <!-- 오른쪽 -->
        <Border
            Background="Transparent"
            Width="5"
            HorizontalAlignment="Right"
            MouseMove="Border_MouseMove"
            Cursor="SizeWE"
            Panel.ZIndex="10" />
        <!-- 오른쪽 -->

        <!-- 코너 (예: 오른쪽 아래 모서리) -->
        <Border
            Background="Transparent"
            Width="10"
            Height="10"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            MouseMove="Border_MouseMove"
            MouseLeftButtonDown="Windows_Resize"
            Cursor="SizeNWSE"
            Panel.ZIndex="10" />

        <Border
            Background="Transparent"
            Width="10"
            Height="10"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            MouseMove="Border_MouseMove"
            Cursor="SizeNWSE"
            Panel.ZIndex="10" />
        <!--
        <Border
            Name="ResizeDetector"
            Background="Transparent"
            Margin="-2"
            MouseMove="Border_MouseMove"
            Panel.ZIndex="10" />
-->
    </Grid>
</Window>
