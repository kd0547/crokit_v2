<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:crokit"
    xmlns:timer="clr-namespace:crokit.Timer"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    x:Class="crokit.TimerWindow"
    mc:Ignorable="d"
    MouseDown="Window_MouseDown"
    Background="#262626"
    WindowStyle="None"
    ResizeMode="NoResize"
    Topmost="{Binding IsChecked, ElementName=TopMost_Button}"
    AllowsTransparency="True"
    Title="TimerWindow"
    Height="150"
    Width="250">
    <Window.Resources>
        <timer:InverseBooleanConverter
            x:Key="InverseBooleanConverter" />
    </Window.Resources>
    <Border
        BorderThickness="1"
        BorderBrush="RoyalBlue">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition
                    Height="30" />
                <RowDefinition
                    Height="75*" />
                <RowDefinition
                    Height="43*" />

            </Grid.RowDefinitions>
            <StackPanel
                Grid.Row="0"
                Orientation="Horizontal"
                HorizontalAlignment="Left"
                Margin="184,0,0,0"
                Width="64">
                <ToggleButton
                    x:Name="TopMost_Button"
                    Background="{x:Null}"
                    BorderBrush="{x:Null}"
                    HorizontalAlignment="Left"
                    Width="32"
                    Foreground="{x:Null}"
                    IsChecked="False"
                    IsTabStop="False"
                    Focusable="False">
                    <ToggleButton.Style>
                        <Style
                            TargetType="{x:Type ToggleButton}">
                            <!-- 초기 상태는 Off (IsChecked=false) -->
                            <Setter
                                Property="IsChecked"
                                Value="False" />
                            <Setter
                                Property="Content">
                                <Setter.Value>
                                    <Image
                                        Source="pack://application:,,,/Resources/keep_off.png"
                                        Height="20"
                                        Width="20"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center" />
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger
                                    Property="IsChecked"
                                    Value="True">
                                    <Setter
                                        Property="Background"
                                        Value="{x:Null}" />
                                    <Setter
                                        Property="Content">
                                        <Setter.Value>
                                            <Image
                                                Source="pack://application:,,,/Resources/keep.png"
                                                Height="20"
                                                Width="20"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center" />
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ToggleButton.Style>
                    <ToggleButton.Template>
                        <ControlTemplate
                            TargetType="{x:Type ToggleButton}">
                            <ContentPresenter
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center" />
                        </ControlTemplate>
                    </ToggleButton.Template>
                </ToggleButton>
                <Button
                    x:Name="Close_Button"
                    Background="{x:Null}"
                    BorderBrush="{x:Null}"
                    HorizontalAlignment="Left"
                    Width="32"
                    Click="Button_Click"
                    IsTabStop="False">
                    <Image
                        Source="pack://application:,,,/Resources/close.png"
                        Height="20"
                        Width="20"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center" />
                </Button>
            </StackPanel>

            <StackPanel
                Grid.Row="1"
                Orientation="Horizontal"
                VerticalAlignment="Center"
                Height="60"
                HorizontalAlignment="Center">
                <!-- 시 -->
                <TextBox
                    Text="{Binding Hour, UpdateSourceTrigger=PropertyChanged}"
                    IsReadOnly="{Binding IsTimeEditable ,Converter={StaticResource InverseBooleanConverter}}"
                    FocusVisualStyle="{x:Null}"
                    MouseLeave="TextBox_MouseLeave"
                    d:Text="00"
                    FontFamily="Segoe UI"
                    FontSize="44"
                    FontWeight="Bold"
                    BorderBrush="{x:Null}"
                    Width="65"
                    Margin="1,0,0,0"
                    
                    />

                <!-- 콜론 구분자 -->
                <TextBlock
                    Text=":"
                    FontFamily="Segoe UI"
                    FontSize="44"
                    Margin="4,0"
                    FontWeight="Bold"
                    Foreground="White" />

                <!-- 분 -->
                <TextBox
                    Text="{Binding Minute ,UpdateSourceTrigger=PropertyChanged}"
                    IsReadOnly="{Binding IsTimeEditable ,Converter={StaticResource InverseBooleanConverter}}"
                    d:Text="00"
                    MouseLeave="TextBox_MouseLeave"
                    FontFamily="Segoe UI"
                    FontSize="44"
                    FontWeight="Bold"
                    BorderBrush="{x:Null}"
                    Width="65"
                    Margin="1,0,0,0" />

                <!-- 콜론 구분자 -->
                <TextBlock
                    Text=":"
                    FontFamily="Segoe UI"
                    FontSize="44"
                    Margin="5,0"
                    FontWeight="Bold"
                    Foreground="White" />

                <!-- 초 -->
                <TextBox
                    Text="{Binding Seconds, UpdateSourceTrigger=PropertyChanged}"
                    IsReadOnly="{Binding IsTimeEditable ,Converter={StaticResource InverseBooleanConverter}}"
                    d:Text="00"
                    MouseLeave="TextBox_MouseLeave"
                    FontFamily="Segoe UI"
                    FontSize="44"
                    FontWeight="Bold"
                    BorderBrush="{x:Null}"
                    Width="65"
                    Margin="1,0,0,0" />
            </StackPanel>
            <StackPanel
                Grid.Row="2"
                Orientation="Horizontal"
                HorizontalAlignment="Center"
                Width="130">
                <Button
                    Background="{x:Null}"
                    BorderBrush="{x:Null}"
                    IsTabStop="False"
                    Command="{Binding StopCommand}"
                    Width="40">
                    <Image
                        Source="pack://application:,,,/Resources/stop.png" />
                </Button>
                <Button
                    Background="{x:Null}"
                    BorderBrush="{x:Null}"
                    Width="50"
                    Command="{Binding StartCommand}"
                    IsTabStop="False">
                    <Image
                        Source="pack://application:,,,/Resources/play_arrow.png" />
                </Button>
                <Button
                    Background="{x:Null}"
                    BorderBrush="{x:Null}"
                    Command="{Binding PauseCommand}"
                    Width="40"
                    IsTabStop="False">
                    <Image
                        Source="pack://application:,,,/Resources/pause.png" />
                </Button>
               

            </StackPanel>
        </Grid>
    </Border>
</Window>
